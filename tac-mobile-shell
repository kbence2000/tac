  <script>
    // ------------------------
    // Basic clock (iOS style)
    // ------------------------
    function updateClock() {
      const el = document.getElementById("statusClock");
      if (!el) return;
      const now = new Date();
      const hh = String(now.getHours()).padStart(2, "0");
      const mm = String(now.getMinutes()).padStart(2, "0");
      el.textContent = hh + ":" + mm;
    }
    updateClock();
    setInterval(updateClock, 30000);

    // ------------------------
    // Dark / Light / Auto theme
    // ------------------------
    function getSystemTheme() {
      return window.matchMedia &&
        window.matchMedia("(prefers-color-scheme: dark)").matches
        ? "dark"
        : "light";
    }

    function applyTheme(theme) {
      const html = document.documentElement;
      const themeLabel = document.getElementById("themeLabel");
      const metaTheme = document.querySelector('meta[name="theme-color"]');

      let effectiveTheme = theme;
      if (theme === "system") {
        effectiveTheme = getSystemTheme();
      }

      html.setAttribute("data-theme", effectiveTheme);
      localStorage.setItem("tac-theme-mode", theme);

      if (theme === "system") {
        themeLabel.textContent = "Auto";
      } else {
        themeLabel.textContent =
          theme.charAt(0).toUpperCase() + theme.slice(1);
      }

      if (metaTheme) {
        metaTheme.setAttribute(
          "content",
          effectiveTheme === "dark" ? "#050816" : "#f5f5f7"
        );
      }
    }

    (function initTheme() {
      const saved = localStorage.getItem("tac-theme-mode") || "system";
      applyTheme(saved);
      const toggleBtn = document.getElementById("themeToggle");
      toggleBtn.addEventListener("click", () => {
        const current = localStorage.getItem("tac-theme-mode") || "system";
        const next =
          current === "system"
            ? "light"
            : current === "light"
            ? "dark"
            : "system";
        applyTheme(next);
      });
    })();

    // ------------------------
    // Detect standalone / PWA state
    // ------------------------
    function detectPWAState() {
      const label = document.getElementById("pwaStateLabel");
      const isStandalone =
        window.matchMedia("(display-mode: standalone)").matches ||
        window.navigator.standalone === true;
      if (isStandalone) {
        label.textContent = "standalone";
      } else {
        label.textContent = "browser";
      }
    }
    detectPWAState();
    window.addEventListener("resize", detectPWAState);
    window.addEventListener("load", detectPWAState);

    // ------------------------
    // Loading overlay hide
    // ------------------------
    window.addEventListener("load", () => {
      setTimeout(() => {
        const overlay = document.getElementById("loaderOverlay");
        if (overlay) overlay.classList.add("hidden");
      }, 900); // iOS-szer≈± finom delay
    });

    // ------------------------
    // Inline manifest (Blob + link)
    // ------------------------
    (function injectManifest() {
      const manifest = {
        name: "TAC Mobile Shell",
        short_name: "TAC Mobile",
        start_url: ".",
        display: "standalone",
        background_color: "#050816",
        theme_color: "#050816",
        icons: [
          {
            src: "icon-192.png",
            sizes: "192x192",
            type: "image/png"
          },
          {
            src: "icon-512.png",
            sizes: "512x512",
            type: "image/png"
          }
        ]
      };

      const blob = new Blob([JSON.stringify(manifest)], {
        type: "application/json"
      });
      const url = URL.createObjectURL(blob);
      const link = document.createElement("link");
      link.rel = "manifest";
      link.href = url;
      document.head.appendChild(link);
    })();

    // ------------------------
    // Service Worker (inline via Blob)
    // NOTE: val√≥di pushh√∂z szerver kell (VAPID kulcsok, subscription kezel√©s).
    // Itt egy alap SW k√≥dot h√∫zunk fel 1 f√°jlb√≥l.
    // ------------------------
    async function registerInlineServiceWorker() {
      if (!("serviceWorker" in navigator)) return;
      try {
        const swCode = `
          self.addEventListener('install', event => {
            self.skipWaiting();
          });
          self.addEventListener('activate', event => {
            event.waitUntil(clients.claim());
          });

          // Offline fallback p√©ld√°ul itt is megoldhat√≥, ha kell.
          self.addEventListener('fetch', event => {
            // pass-through basic
          });

          // Push event ‚Äì val√≥di push szerverrel √©rtelmes.
          self.addEventListener('push', event => {
            let data = {};
            try {
              data = event.data ? event.data.json() : {};
            } catch (e) {
              data = { title: 'TAC Push', body: event.data && event.data.text() };
            }
            const title = data.title || 'TAC Push';
            const body = data.body || 'Hello from TAC Mobile Shell!';
            event.waitUntil(
              self.registration.showNotification(title, {
                body,
                icon: data.icon || undefined,
                badge: data.badge || undefined,
                data: data.data || {}
              })
            );
          });

          self.addEventListener('notificationclick', event => {
            event.notification.close();
            event.waitUntil(
              clients.matchAll({ type: 'window', includeUncontrolled: true }).then(list => {
                if (list.length > 0) {
                  const client = list[0];
                  return client.focus();
                }
                return clients.openWindow('./');
              })
            );
          });
        `;
        const blob = new Blob([swCode], { type: "text/javascript" });
        const swUrl = URL.createObjectURL(blob);
        const reg = await navigator.serviceWorker.register(swUrl);
        console.log("Service worker registered (inline blob)", reg);
      } catch (err) {
        console.error("SW registration failed", err);
      }
    }
    registerInlineServiceWorker();

    // ------------------------
    // Notification logic
    // ------------------------
    async function ensureNotificationPermission() {
      if (!("Notification" in window)) {
        alert("This device/browser does not support Notifications.");
        return null;
      }
      let perm = Notification.permission;
      if (perm === "default") {
        perm = await Notification.requestPermission();
      }
      if (perm !== "granted") {
        alert("Notification permission denied.");
        return null;
      }
      return perm;
    }

    async function testLocalNotification() {
      const perm = await ensureNotificationPermission();
      if (!perm) return;

      if ("serviceWorker" in navigator) {
        const reg = await navigator.serviceWorker.ready;
        reg.showNotification("TAC local notification", {
          body: "HTML5 notification from inside the PWA shell.",
          icon: undefined,
          badge: undefined
        });
      } else {
        new Notification("TAC local notification", {
          body: "Fallback Notification object."
        });
      }
    }

    document
      .getElementById("btnEnableNotifications")
      .addEventListener("click", ensureNotificationPermission);

    document
      .getElementById("btnTestNotification")
      .addEventListener("click", testLocalNotification);

    // ------------------------
    // Icon generator (canvas -> PNG + apple-touch-icon update)
    // ------------------------
    function generateIcon() {
      const canvas = document.getElementById("iconCanvas");
      const ctx = canvas.getContext("2d");
      const text = (document.getElementById("iconText").value || "TAC").toUpperCase();
      const bg = document.getElementById("iconColor").value || "#7c3aed";

      // Background
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      const grad = ctx.createLinearGradient(0, 0, canvas.width, canvas.height);
      grad.addColorStop(0, bg);
      grad.addColorStop(1, "#020617");
      ctx.fillStyle = grad;
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      // Slight inner glow
      ctx.fillStyle = "rgba(15,23,42,0.35)";
      ctx.fillRect(28, 28, canvas.width - 56, canvas.height - 56);

      // Text
      ctx.fillStyle = "#e5e7eb";
      ctx.font = "bold 220px system-ui, -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Segoe UI', sans-serif";
      ctx.textAlign = "center";
      ctx.textBaseline = "middle";
      ctx.fillText(text, canvas.width / 2, canvas.height / 2);

      const dataUrl = canvas.toDataURL("image/png");
      const preview = document.getElementById("iconPreview");
      preview.src = dataUrl;

      // Update apple-touch-icon
      const appleLink = document.getElementById("appleTouchIcon");
      appleLink.href = dataUrl;

      return dataUrl;
    }

    document.getElementById("iconText").addEventListener("input", generateIcon);
    document.getElementById("iconColor").addEventListener("input", generateIcon);

    document
      .getElementById("btnDownloadIcon")
      .addEventListener("click", () => {
        const dataUrl = generateIcon();
        const a = document.createElement("a");
        a.href = dataUrl;
        a.download = "tac-icon-512.png";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
      });

    // initial icon
    generateIcon();
  </script>
</body>
</html>
